<section class="d-flex flex-column justify-content-center">
  <h2>Sign Up</h2>
  <form id="form-signup" class="d-flex flex-column  w-50">
    <input id="signup-username" type="text" class="form-control" placeholder="Username">
    <input id="signup-email" type="email" class="form-control" placeholder="Email">
    <input id="signup-password" type="password" class="form-control" placeholder="Password">
    <button id="signup-button" type="submit", class="btn btn-primary w-25">Sign Up</button>
  </form>

  <p>Already signed up? <a href="/login">Click here</button></p>
</section>

<script src="./js/signup.js"></script>