<section class="card is-shadowless has-border mx-3 my-5 login">
  <div class="has-background-dark has-text-white p-3 card-title">
    <h2 class="has-text-weight-bold fs-5">Sign Up</h2>
  </div>

  <form id="form-signup">
    <div class="card-body">
      <div class="field column">
        <label class="label">Username</label>
        <div class="control">
          <input id="signup-username" type="text" class="input">
        </div>
      </div>

      <div class="field column">
        <label class="label">Password</label>
        <div class="control">
          <input id="signup-password" type="password" class="input">
        </div>
      </div>

      <div class="field column">
        <div class="control">
          <button id="signup-button" type="submit" , class="button is-dark">Sign Up</button>
        </div>
      </div>

      <div class="text-new-user p-3">
        <p>Already signed up? <a href="/login">Login here</button></p>
      </div>
    </div>
  </form>
</section>


<script src="./js/signup.js"></script>