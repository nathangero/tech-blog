<section id="form-comment" class="card is-shadowless has-border my-5">
  <form>
    <div class="card-body">
      <div class="field column">
        <label class="label">Comment</label>
        <div class="control">
          <textarea id="comment-content" type="text" class="textarea"></textarea>
        </div>
      </div>

      <div class="field column">
        <div class="control">
          <button id="button-add-comment" class="button is-dark mb-3">Post Comment</button>
        </div>
        <div class="control">
          <button id="button-cancel-comment" class="button is-dark">Cancel</button>
        </div>
      </div>
    </div>
  </form>
</section>