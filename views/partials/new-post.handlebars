<section id="form-post" class="card is-shadowless has-border mx-3 my-5">
  <div class="has-background-dark has-text-white p-3 card-title">
    <h2 class="has-text-weight-bold">Create New Post</h2>
  </div>
  <form>
    <div class="card-body">
      <div class="field column">
        <label class="label">Title</label>
        <div class="control">
          <input id="post-title" type="text" class="input">
        </div>
      </div>

      <div class="field column">
        <label class="label">Content</label>
        <div class="control">
          <textarea id="post-content" type="text" class="textarea"></textarea>
        </div>
      </div>

      <div class="field column">
        <div class="control">
          <button id="button-add-post" class="button is-dark mb-3">Add Post</button>
        </div>
        <div class="control">
          <button id="button-cancel-post" class="button is-dark">Cancel</button>
        </div>
      </div>
    </div>
  </form>
</section>