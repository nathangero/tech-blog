<section id="form-update-post" class="card is-shadowless has-border">
  <div class="has-background-dark has-text-white p-3 card-title">
    <h2 class="has-text-weight-bold">Edit Post</h2>
  </div>
  <form>
    <div class="card-body">
      <div class="field column">
        <label class="label">Title</label>
        <div class="control">
          <textarea id="post-update-title" class="textarea has-fixed-size" rows="1">{{post.title}}</textarea>
        </div>
      </div>

      <div class="field column">
        <label class="label">Content</label>
        <div class="control">
          <textarea id="post-update-content" class="textarea">{{post.content}}</textarea>
        </div>
      </div>

      <div class="field column">
        <div class="control">
          <button id="button-confirm-update" class="button is-dark mb-3">Update Post</button>
        </div>
        <div class="control">
          <button id="button-cancel-update" class="button is-dark">Cancel</button>
        </div>
      </div>
    </div>
  </form>
</section>